{{#if newAnswer}}
    <div>
      <form>
        {{input value=questionId type="hidden"}}
        <div class="form-group">
          <label for="author">Your Name:</label><br>
          {{input value=author id="author"}}
        </div>

        <div class="form-group">
          <label for="theAnswer">Your Answer:</label><br>
          {{input value=theAnswer id="theAnswer"}}
        </div>

        <button class="btn btn-primary btn-sm" {{action 'submitAnswer'}}>Submit Answer</button><br><br><hr>
      </form>
    </div>
{{else}}
    <button class="btn btn-sm btn-success" id="submitNewAnswer" {{action 'showAnswerForm'}}>New Answer</button>
{{/if}}
